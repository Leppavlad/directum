{
  "form": {
    "name": "Консультация",
    "postmessage": "Спасибо за ответ!",
    "class": "form",

    "items": [      
    {
      "type": "text",
      "attributes": {
        "name": "name",
        "placeholder": "Введите Ваше имя",
        "required": true,
        "value": "",
        "label": "Имя",
        "class": "form__input",
        "validationRules": [{
          "minlength": 3
          }],
        "disabled": false
      }
    }, 
    {
      "type": "tel",
      "attributes": {
        "name": "phone",
        "placeholder": "Ваш номер телефона",
        "required": true,
        "value": "",
        "label": "Телефон",
        "class": "form__input",
        "validationRules": [{
          "minlength": 6,
          "maxlength": 11,
          "digits": true
          }],
        "disabled": false
      }
    }, 
    {
      "type": "email",
      "attributes": {
        "name": "email",
        "placeholder": "Электронная почта",
        "required": true,
        "value": "",
        "label": "E-mail",
        "class": "form__input",
        "validationRules": [{
          "email": true
          }],
        "disabled": false
      }
    }, 
    {
      "type": "textarea",
      "attributes": {
        "name": "message",
        "placeholder": "Ваше сообщение",
        "required": true,
        "value": "",
        "label": "Сообщение",
        "class": "form__input_textarea",
        "validationRules": [],
        "disabled": false
      }
    },
    {
      "type": "checkbox",
      "attributes": {
        "name": "agreement",
        "placeholder": "",
        "required": false,
        "value": "",
        "label": "С условиями обслуживания ознакомлен",
        "class": "form__checkbox",
        "validationRules": [],
        "disabled": false,
        "checked": false
      }
    },
    {
      "type": "select",
      "attributes": {
        "name": "select",
        "placeholder": "",
        "required": false,
        "options": [{
          "value": "first",
          "text": "Бюджет",
          "selected": false
        }, {
          "value": "second",
          "text": "Оптима",
          "selected": true
        }, {
          "value": "third",
          "text": "Экстра",
          "selected": false
        }],
        "value": "",
        "label": "Опция",
        "class": "select",
        "validationRules": [],
        "disabled": false
      }
    }, {
      "type": "radio",
      "attributes": {
        "name": "sex",
        "placeholder": "",
        "required": false,
        "values": [{
          "label": "Мужской",
          "value": "male",
          "checked": true
        }, {
          "label": "Женский",
          "value": "female",
          "checked": false
        }],
        "label": "Пол",
        "class": "radio",
        "validationRules": [],
        "disabled": false
      }
    }, {
      "type": "submit",
      "attributes": {
        "name": "submit",
        "placeholder": "",
        "required": false,
        "value": "Отправить",
        "label": "",
        "class": "button_form",
        "validationRules": [],
        "disabled": false
      }
    }
    ]
  }
}